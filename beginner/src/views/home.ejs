<!DOCTYPE html>
<html lang="en">

<head>
     <meta charset="UTF-8">
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <title>Home Page</title>
     <link rel="stylesheet" href="../css/style.css">
</head>


<body>

     <div class="topnav">
          <a class="active" href="/">Home</a>
          <a href="/create">Create User</a>
     </div>
     <div class="table-container">
          <div class="title"> List Users</div>
          <table>
               <tr>
                    <th>ID</th>
                    <th>Email</th>
                    <th>Name</th>
                    <th>City</th>
                    <th>Actions</th>
               </tr>
               <% listU.forEach(function(u) { %>
                    <tr>
                         <td>
                              <%= u.id %>
                         </td>
                         <td>
                              <%= u.email %>
                         </td>
                         <td>
                              <%= u.name %>
                         </td>
                         <td>
                              <%= u.city %>
                         </td>
                         <td>
                              <button><a href="/update/<%= u.id %>"> Edit</a> </button>
                              <form action="/delete-user/<%= u.id %>" method="post">
                                   <button> Delete</button>
                              </form>

                         </td>
                    </tr>
                    <% });%>
          </table>
     </div>

</body>

</html>